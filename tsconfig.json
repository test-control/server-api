{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": [
      "node",
      "knex-paginate",
      "jest"
    ],
    "typeRoots": [
      "./src/types/express/index.d.ts",
      "./node_modules/@types"
    ]
  },
  "lib": ["es2015"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": [
    "./db/**/*",
    "./src/**/*.ts",
    "./knexfile.ts"
  ]
}
